<!DOCTYPE html>
<html lang="en">
    <style>
    #btnlog{
        line-height: 1px;
        /* width: 18px; */
        font-size: 12pt;
        font-family: tahoma;
        margin-top: 19px;
        margin-right: 92px;
        position: absolute;
        top: 0;
        right: 0;
    }

    #name {
      
        /* width: 18px; */
        font-size: 12pt;
        font-family: tahoma;
        margin-top: 19px;
        margin-right: 200px;
        position: absolute;
        top: 0;
        right: 0;
    }
</style>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskbySaurabhSirUI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskbySaurabhSirUI.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TaskbySaurabhSirUI</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                           <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="index">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        @{
                            var t = Context.Session.GetString("accesstoken");
                        }
                        @if (!string.IsNullOrEmpty(t)){

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CreatePerson">Create Person</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="GetPerson">Get Person List</a>
                            </li>
                            <div style="float:right;" id="btnlog" >
                            <li class="nav-item" style="float:right; align="right">
                                <a style="float:right; align="right" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="logout">Log Out</a>
                            </li>
                            </div>
                           

                            }
                        @{
                            var user = Context.Session.GetString("user");
                        }
                        @if (!string.IsNullOrEmpty(user)){


                    <div id="name" style="color:pink"> User Name
                            @Context.Session.GetString("user")
                            </div>
                        }
              




                </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="position:fixed" class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - TaskbySaurabhSirUI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<style>
    #button {
        line-height: 12px;
        width: 18px;
        font-size: 8pt;
        font-family: tahoma;
        margin-top: 1px;
        margin-right: 2px;
        position: absolute;
        top: 0;
        right: 0;
    }

</style>